@model Sistema_Patrimonio.Models.DbDepartamento

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar Departamento</h1>

<h3>Vpcê tem certeza que deseja deletar?</h3>
<div>
 
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nomedepartamento)
        </dd>
        <dt class = "col-sm-2">
            Descrição:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.descricaodepartamento)
        </dd>
        <dt class = "col-sm-2">
            Local:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.idlocal)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="iddepartamento" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-dark">Voltar</a>
    </form>
</div>
