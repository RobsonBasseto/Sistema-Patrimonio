@model IEnumerable<Sistema_Patrimonio.Models.DtoDepartamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Departamentos</h1>

<p>
    
    <a asp-action="Create" class="btn btn-primary">Criar Novo</a>
</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Descrição
            </th>
            <th>
                Local
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nomedepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descricaodepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nomelocal)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.iddepartamento" class="btn btn-warning">Editar</a>
                <a asp-action="Details" asp-route-id="@item.iddepartamento" class="btn btn-info">Detalhes</a> 
                <a asp-action="Delete" asp-route-id="@item.iddepartamento" class="btn btn-danger">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
