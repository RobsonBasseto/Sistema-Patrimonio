@model Sistema_Patrimonio.Models.DbLocal

@{
    ViewData["Title"] = "Details";
}

<h1>DetalheS do Local</h1>

<div>
    <h4>DbLocal</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome do local:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nomelocal)
        </dd>
        <dt class = "col-sm-2">
            Descrição:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.descricaolocal)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.idlocal" class="btn btn-warning">Editar</a> <br />
    <a asp-action="Index" class="btn btn-dark">Voltar</a>
</div>
