@model Sistema_Patrimonio.Models.DbFornecedor

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar Fornecedor</h1>

<h3>Você tem certeza que deseja deletar?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nomefornecedor)
        </dd>
        <dt class="col-sm-2">
            Endereço:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.endereco)
        </dd>
        <dt class="col-sm-2">
            Telefone:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.fone)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="idfornecedor" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-dark">Voltar</a>
    </form>
</div>
