@model IEnumerable<Sistema_Patrimonio.Models.DbFornecedor>

@{
    ViewData["Title"] = "Index";
}

<h1>Fornecedores</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar Novo</a>
</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Endereço
            </th>
            <th>
                Telefone
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nomefornecedor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.endereco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fone)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.idfornecedor" class="btn btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.idfornecedor" class="btn btn-info">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.idfornecedor" class="btn btn-danger">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
