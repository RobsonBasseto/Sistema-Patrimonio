@model Sistema_Patrimonio.Models.DbFornecedor

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes do Fornecedor</h1>

<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nomefornecedor)
        </dd>
        <dt class = "col-sm-2">
            Endereço:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.endereco)
        </dd>
        <dt class = "col-sm-2">
            Telefone:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.fone)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.idfornecedor" class="btn btn-warning">Editar</a> 
    <a asp-action="Index" class="btn btn-dark">Voltar</a>
</div>
