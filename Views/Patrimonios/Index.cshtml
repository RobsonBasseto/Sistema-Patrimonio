@model IEnumerable<Sistema_Patrimonio.Models.DtoPatrimonio>

@{
    ViewData["Title"] = "Index";
}

<h1>Patrimonios</h1>

<p>
    <a asp-action="Create"  class="btn btn-primary">Novo</a>
</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                Etiqueta
                
            </th>
            <th>
                Nome 
            </th>
            <th>
                Descricao 
            </th>
            <th>
                Valor
            </th>
            <th>
                Categoria
            </th>
            <th>
                Departamento
            </th>
            <th>
                Local
            </th>
            <th>
                Marca
            </th>
            <th>
                Aquisição
            </th>
            <th>
                Baixa
            </th>
            <th>
                Número
            </th>
            <th>
                Série
            </th>
            <th>
                Situação
            </th>
            <th>
                Fornecedor
            </th>
            <th>
                Garantia
                
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.numetiqueta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nomepatrimonio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descricaopatrimonio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valorpatrimonio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descricaocategoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nomedepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nomelocal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.marcamodelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dataaquisicao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.databaixa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numnf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numserie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.situacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nomefornecedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.datagarantia)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idpatrimonio" class="btn btn-warning">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.idpatrimonio" class="btn btn-info">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.idpatrimonio" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
