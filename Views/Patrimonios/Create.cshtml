@model Sistema_Patrimonio.Models.DbPatrimonio

@{
    ViewData["Title"] = "Create";
}

<h1>Novo Patrimonio</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="numetiqueta" class="control-label">Numero da etiqueta</label>
                <input asp-for="numetiqueta" class="form-control" />
                <span asp-validation-for="numetiqueta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nomepatrimonio" class="control-label">Nome do Patrimonio</label>
                <input asp-for="nomepatrimonio" class="form-control" />
                <span asp-validation-for="nomepatrimonio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="descricaopatrimonio" class="control-label">Descrição</label>
                <input asp-for="descricaopatrimonio" class="form-control" />
                <span asp-validation-for="descricaopatrimonio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="valorpatrimonio" class="control-label">Valor</label>
                <input asp-for="valorpatrimonio" class="form-control" />
                <span asp-validation-for="valorpatrimonio" class="text-danger"></span>
            </div>
           <div class="form-group">
               <label asp-for="idcategoria" class="control-label">Categoria</label>
                @*HtmlHelpers*@
                @*<text>Categoria</text> @Html.DropDownList("Categoria", new SelectList(ViewBag.Categoria))*@
                @*Razor*@
                <select asp-items=@ViewBag.Categoria asp-for="idcategoria" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="iddepartamento" class="control-label">Departamento</label>
                @*HtmlHelpers*@
                @*<text>Departamento</text> @Html.DropDownList("Departamento", new SelectList(ViewBag.Departamento))*@
                @*Razor*@
                <select asp-items=@ViewBag.Departamento asp-for="iddepartamento" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="idlocal" class="control-label">Local</label>
                @*HtmlHelpers*@
                @*<text>Local</text> @Html.DropDownList("Local", new SelectList(ViewBag.local))*@
                @*Razor*@
                <select asp-items=@ViewBag.Local asp-for="idlocal" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="marcamodelo" class="control-label">Marca/Modelo</label>
                <input asp-for="marcamodelo" class="form-control" />
                <span asp-validation-for="marcamodelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dataaquisicao" class="control-label">Data de Aquisição</label>
                <input asp-for="dataaquisicao" class="form-control" />
                <span asp-validation-for="dataaquisicao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="databaixa" class="control-label">Data de Baixa</label>
                <input asp-for="databaixa" class="form-control" />
                <span asp-validation-for="databaixa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="numnf" class="control-label">Número</label>
                <input asp-for="numnf" class="form-control" />
                <span asp-validation-for="numnf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="numserie" class="control-label">Série</label>
                <input asp-for="numserie" class="form-control" />
                <span asp-validation-for="numserie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="situacao" class="control-label">Situação</label>
                <input asp-for="situacao" class="form-control" />
                <span asp-validation-for="situacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idfornecedor" class="control-label">Fornecedor</label>
                @*HtmlHelpers*@
                @*<text>Fornecedor</text> @Html.DropDownList("Fornecedor", new SelectList(ViewBag.Fornecedor))*@
                @*Razor*@
                <select asp-items=@ViewBag.Fornecedor asp-for="idfornecedor" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="datagarantia" class="control-label">Data de Garantia</label>
                <input asp-for="datagarantia" class="form-control" />
                <span asp-validation-for="datagarantia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
