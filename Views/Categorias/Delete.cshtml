@model Sistema_Patrimonio.Models.DbCategoria

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar Categoria</h1>

<h3>Você tem certeza que deseja deletar?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Descrição:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.descricaocategoria)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="idcategoria" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-dark">Voltar</a>
    </form>
</div>
