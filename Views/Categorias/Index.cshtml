@model IEnumerable<Sistema_Patrimonio.Models.DbCategoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Categorias</h1>

<p>
   <a asp-action="Create" class="btn btn-primary">Criar Novo</a>
</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                Descrição
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.descricaocategoria)
            </td>
            <td>
               <a asp-action="Edit" asp-route-id="@item.idcategoria" class="btn btn-warning">Editar</a>         
               <a asp-action="Details" asp-route-id="@item.idcategoria" class="btn btn-info">Detalhes</a>
               <a asp-action="Delete" asp-route-id="@item.idcategoria" class="btn btn-danger">Deletar</a>                 </td>
        </tr>
}
    </tbody>
</table>
