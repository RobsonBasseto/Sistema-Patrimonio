@model Sistema_Patrimonio.Models.DbCategoria

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes da Categoria</h1>

<div>
  
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Descrição:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.descricaocategoria)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.idcategoria" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-dark">Voltar</a>
</div>
